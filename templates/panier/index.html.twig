{% extends 'base.html.twig' %}

{% block body %}
<div class="bg-light p-3">
<h1>Votre panier</h1>
</div>

{% if items | length > 0 %}

<table class="table">
<thead>
<tr>
<th>Articles</th>
<th>Prix</th>
<th>Quantit√©</th>
<th>Total</th>
<th></th>

</tr>
</thead>
<tbody>
{% for item in items %}

<tr>
<td>{{ item.product.title }} </td>
<td>{{ item.product.prix }} </td>
<td>{{ item.quantity }} <a href="{{path('add_one_product', {'id':item.product.id})}}" class="btn btn-success btn-sm">
<i class="fas fa-plus"></i>
</a></td>

<td>{{ item.product.prix * item.quantity }}</td>
<td>
<a href="{{path('cart_remove', {'id':item.product.id})}}" class="btn btn-danger btn-sm">
<i class="fas fa-trash"></i>
</a>

</td>
</tr>
{% endfor %}
</tbody>
<tfoot>
<td colspan="3" class="text-right"> Total : 
</td>
<td>{{ total }}</td>
<td></td>
</tfoot>
</table>
{% else %} 
<p>Surprise, c'est vide !</p>
{% endif %} 

{% endblock %}
   